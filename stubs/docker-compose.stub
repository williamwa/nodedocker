version: '3'
services:
    app:
        build:
            context: ./node_modules/nsail/runtimes/nextjs
            dockerfile: Dockerfile
            args:
                WWWGROUP: '${WWWGROUP}'
        image: nsail-nextjs/app
        extra_hosts:
            - 'host.docker.internal:host-gateway'
        ports:
            - '${APP_PORT:-3000}:3000'
        environment:
            WWWUSER: '${WWWUSER}'
        volumes:
            - '.:/app'
        networks:
            - nsail
{{depends}}
{{services}}
networks:
    nsail:
        driver: bridge
{{volumes}}
