version: '3'
services:
    app:
        build:
            context: ./
            dockerfile: ./node_modules/nsail/runtimes/nextjs/Dockerfile
        image: nsail-nextjs/app
        extra_hosts:
            - 'host.docker.internal:host-gateway'
        ports:
            - '${APP_PORT:-3000}:3000'
        volumes:
            - '.:/app'
        networks:
            - nsail
{{depends}}
{{services}}
networks:
    nsail:
        driver: bridge
{{volumes}}
